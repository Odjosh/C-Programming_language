/* Author: Joshua Odubu
   Purpose: This program will calculate the area of a rectangle
*/

#include <stdio.h>
#include <stdlib.h>

int main()
{
 // declaring the variables

    double width = 58.3;
    double height = 93.4;
    double perimeter = 0.0;
    double area = 0.0;

 // performing perimeter and area calculations
    perimeter = 2.0 * (width + height);
    area = width * height;

    printf("Width is: %.2f, Height is: %.2f, Perimeter is: %.2f\n", width, height, perimeter);
    printf("Area is: %.2f\n", area);

    return 0;
}

